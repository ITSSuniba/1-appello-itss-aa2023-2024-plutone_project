package io;

import java.util.Scanner;

public class CifraturaMonoAlfabetica {
public static void main (String [] args ) {
	
	String cifrare;
	System.out.println("Inserire una frase che si vuole criptare con la cifratura mono alfabetica");
	Scanner a=new Scanner (System.in);
	cifrare=a.nextLine();
	cifrare=cifrare.toLowerCase();
	int t=cifrare.length();
	
	for(int i=0;i<t;i++) {
		int codiceAscii=(int)(cifrare.charAt(i));
	
	}
}
public String cifraturaMonoAlfabetica(int valore) {
	if (valore==32) {
		cifrata=" ";
	}
	 if( valore==120 || valore==121 || valore==122) {
		valore=122-valore;
		cifrata=String.valueOf(((char)(97+valore)));
	}
	 else {
		 cifrata=String.valueOf(((char)(valore+3)));
	 }

	
	
	return cifrata;
}
}
