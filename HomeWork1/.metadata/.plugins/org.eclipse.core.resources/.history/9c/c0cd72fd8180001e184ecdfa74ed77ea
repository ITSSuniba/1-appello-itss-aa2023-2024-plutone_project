package io;

import static org.junit.jupiter.api.Assertions.*;

import org.junit.jupiter.api.Test;

class TestCifraturaMonoAlfabetica {

	@Test
	public void test() {
		assertTrue(CifraturaMonoAlfabetica.createrandom()>1 && CifraturaMonoAlfabetica.createrandom()<12);
	}
	public void test1() {
		int random=(int)(((Math.random()*100)+1)/4);
		int valore=97+random;
		int chiave=CifraturaMonoAlfabetica.createrandom();
		String g=CifraturaMonoAlfabetica.cifraturaMonoAlfabetica(valore,chiave);
		assertTrue(Integer.parseInt(CifraturaMonoAlfabetica.cifraturaMonoAlfabetica(valore,chiave))>96 && Integer.parseInt(CifraturaMonoAlfabetica.cifraturaMonoAlfabetica(valore,chiave))<123);
	}

}
