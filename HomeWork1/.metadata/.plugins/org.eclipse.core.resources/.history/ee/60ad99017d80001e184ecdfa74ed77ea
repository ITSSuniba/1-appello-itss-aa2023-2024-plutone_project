package io;

import java.util.Scanner;

public class CifraturaMonoAlfabetica {
public static void main (String [] args ) {
	
	String cifrare;
	String criptata=null;
	System.out.println("Inserire una frase che si vuole criptare con la cifratura mono alfabetica");
	Scanner a=new Scanner (System.in);
	cifrare=a.nextLine();
	cifrare=cifrare.toLowerCase();
	int t=cifrare.length();
	
	for(int i=0;i<t;i++) {
		int codiceAscii=(int)(cifrare.charAt(i));
		if(i==0) {
			criptata=cifraturaMonoAlfabetica(codiceAscii);
		}
		else {
	criptata=criptata+cifraturaMonoAlfabetica(codiceAscii);}
	}
	System.out.println(criptata);
}
public static String cifraturaMonoAlfabetica(int valore) {
	String cifrata = null;
	int y=0;
	if (valore==32) {
		cifrata=" ";
		y=1;
	}
	if(y!=1) {
	 if( valore==120 || valore==121 || valore==122) {
		valore=122-valore;
		cifrata=String.valueOf(((char)(97+valore)));
	}
	 else {
		 cifrata=String.valueOf(((char)(valore+3)));
	 }}

	
	
	return cifrata;
}
}
